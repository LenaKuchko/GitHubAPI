@model IEnumerable<GithubAPI.Models.Repo>
@{
    ViewData["Title"] = "Best Projects";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<body>

    <div class="parallax-container">
        <div class="parallax"><img src="~/images/Project1.jpg" /></div>
    </div>
    <div class="section white">
        <div class="container">
            <div class="row"><h2 class="header">My best projects</h2></div>
            <div class="row">
                @foreach (var repo in @Model)
                {

                    <div class="col s4">
                        <div class="card blue-grey darken-1">
                            <div class="card-content white-text">
                                <span class="card-title">@repo.Name</span>
                                <p>
                                    Stars: @repo.Stargazers_Count
                                </p>
                            </div>
                            <div class="card-action">
                                <a href="@repo.Html_Url">You can download it here</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
          </div>
    </div>

    <div class="parallax-container">
        <div class="parallax"><img src="~/images/Project2.jpg" /></div>
    </div>
</body>